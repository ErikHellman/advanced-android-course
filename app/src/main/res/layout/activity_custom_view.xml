<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_custom_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.hellsoft.userinterface.CustomViewActivity">

    <TextView
        android:text="Replace with Custom View!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="@+id/activity_custom_view"
        app:layout_constraintTop_toTopOf="@+id/activity_custom_view"
        app:layout_constraintRight_toRightOf="@+id/activity_custom_view"
        app:layout_constraintBottom_toBottomOf="@+id/activity_custom_view"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"/>
</android.support.constraint.ConstraintLayout>
